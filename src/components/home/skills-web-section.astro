---
import { Icon } from "astro-icon/components";
import PageHeading from "../ui/page-heading.astro";
---

<section
  class="relative z-20 max-w-2xl mx-auto my-8 sm:my-12 px-4 sm:px-7 lg:px-0"
>
  <div class="tech-grid">
    <!-- Frontend Development Card -->
    <div class="skill-card">
      <div class="card-content">
        <div class="card-icon">
          <Icon name="simple-icons:react" class="icon-primary" />
        </div>
        <h3>Frontend Development</h3>
        <p>
          Building responsive, interactive user interfaces with modern web
          technologies
        </p>

        <div class="tech-icons">
          <div class="tech-item">
            <div class="tech-icon">
              <Icon name="simple-icons:react" class="text-[#61DAFB]" />
            </div>
            <span class="tech-label">React</span>
          </div>
          <div class="tech-item">
            <div class="tech-icon">
              <Icon name="simple-icons:typescript" class="text-[#3178C6]" />
            </div>
            <span class="tech-label">TypeScript</span>
          </div>
          <div class="tech-item">
            <div class="tech-icon">
              <Icon name="simple-icons:nextdotjs" class="text-current" />
            </div>
            <span class="tech-label">Next.js</span>
          </div>
          <div class="tech-item">
            <div class="tech-icon">
              <Icon name="simple-icons:tailwindcss" class="text-[#06B6D4]" />
            </div>
            <span class="tech-label">Tailwind</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Backend Development Card -->
    <div class="skill-card">
      <div class="card-content">
        <div class="card-icon">
          <Icon name="simple-icons:nodedotjs" class="icon-primary" />
        </div>
        <h3>Backend Development</h3>
        <p>Building robust server-side applications and APIs</p>

        <div class="tech-icons">
          <div class="tech-item">
            <div class="tech-icon">
              <Icon name="simple-icons:nodedotjs" class="text-[#339933]" />
            </div>
            <span class="tech-label">Node.js</span>
          </div>
          <div class="tech-item">
            <div class="tech-icon">
              <Icon name="simple-icons:express" class="text-current" />
            </div>
            <span class="tech-label">Express</span>
          </div>
          <div class="tech-item">
            <div class="tech-icon">
              <Icon name="simple-icons:clerk" class="text-[#FF6C37]" />
            </div>
            <span class="tech-label">Clerk</span>
          </div>
          <div class="tech-item">
            <div class="tech-icon">
              <Icon name="simple-icons:postman" class="text-[#FF6C37]" />
            </div>
            <span class="tech-label">Postman</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Deployment Card -->
    <div class="skill-card">
      <div class="card-content">
        <div class="card-icon">
          <Icon name="simple-icons:githubactions" class="icon-primary" />
        </div>
        <h3>Deployment</h3>
        <p>Managing development workflow</p>

        <div class="tech-icons">
          <div class="tech-item">
            <div class="tech-icon">
              <Icon name="simple-icons:git" class="text-[#F05032]" />
            </div>
            <span class="tech-label">Git</span>
          </div>
          <div class="tech-item">
            <div class="tech-icon">
              <Icon name="simple-icons:github" class="text-current" />
            </div>
            <span class="tech-label">GitHub</span>
          </div>
          <div class="tech-item">
            <div class="tech-icon">
              <Icon name="simple-icons:docker" class="text-[#2496ED]" />
            </div>
            <span class="tech-label">Docker</span>
          </div>
          <div class="tech-item">
            <div class="tech-icon">
              <Icon name="simple-icons:vercel" class="text-current" />
            </div>
            <span class="tech-label">Vercel</span>
          </div>
