---
import { Icon } from "astro-icon/components";
import PageHeading from "../ui/page-heading.astro";
---

<section
  class="relative z-20 max-w-2xl mx-auto my-8 sm:my-12 px-4 sm:px-7 lg:px-0"
>
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-5 mt-8">
    <!-- Frontend Development Card -->
    <div
      class="relative bg-transparent rounded-lg transition-all duration-300 hover:translate-y-[-4px] h-full group"
    >
      <div
        class="absolute inset-0 border-2 border-dashed border-slate-300 dark:border-slate-700 rounded-lg transition-colors duration-300 group-hover:border-blue-500 z-1"
      >
      </div>
      <div
        class="p-6 flex flex-col h-full relative z-5 bg-transparent rounded-lg transition-all duration-300 group-hover:bg-slate-50/2 dark:group-hover:bg-slate-800/50"
      >
        <div
          class="w-10 h-10 mb-4 transition-transform duration-300 group-hover:scale-110"
        >
          <Icon
            name="simple-icons:react"
            class="w-full h-full text-blue-500 dark:text-blue-400"
          />
        </div>
        <h3
          class="text-lg font-semibold text-slate-800 dark:text-slate-100 mb-2"
        >
          Frontend Development
        </h3>
        <p class="text-sm text-slate-600 dark:text-slate-400 mb-4">
          Building responsive, interactive user interfaces with modern web
          technologies
        </p>

        <div class="mt-auto flex flex-wrap gap-2">
          <div class="flex flex-col items-center min-w-[5rem]">
            <div
              class="w-7 h-7 flex items-center justify-center mb-1 transition-transform duration-200 hover:translate-y-[-2px]"
            >
              <Icon
                name="simple-icons:react"
                class="w-full h-full text-[#61DAFB]"
              />
            </div>
            <span
              class="text-xs text-slate-600 dark:text-slate-400 text-center whitespace-nowrap overflow-hidden text-ellipsis max-w-[5rem]"
              >React</span
            >
          </div>
          <div class="flex flex-col items-center min-w-[5rem]">
            <div
              class="w-7 h-7 flex items-center justify-center mb-1 transition-transform duration-200 hover:translate-y-[-2px]"
            >
              <Icon
                name="simple-icons:typescript"
                class="w-full h-full text-[#3178C6]"
              />
            </div>
            <span
              class="text-xs text-slate-600 dark:text-slate-400 text-center whitespace-nowrap overflow-hidden text-ellipsis max-w-[5rem]"
              >TypeScript</span
            >
          </div>
          <div class="flex flex-col items-center min-w-[5rem]">
            <div
              class="w-7 h-7 flex items-center justify-center mb-1 transition-transform duration-200 hover:translate-y-[-2px]"
            >
              <Icon
                name="simple-icons:nextdotjs"
                class="w-full h-full text-slate-700 dark:text-slate-300"
              />
            </div>
            <span
              class="text-xs text-slate-600 dark:text-slate-400 text-center whitespace-nowrap overflow-hidden text-ellipsis max-w-[5rem]"
              >Next.js</span
            >
          </div>
          <div class="flex flex-col items-center min-w-[5rem]">
            <div
              class="w-7 h-7 flex items-center justify-center mb-1 transition-transform duration-200 hover:translate-y-[-2px]"
            >
              <Icon
                name="simple-icons:tailwindcss"
                class="w-full h-full text-[#06B6D4]"
              />
            </div>
            <span
              class="text-xs text-slate-600 dark:text-slate-400 text-center whitespace-nowrap overflow-hidden text-ellipsis max-w-[5rem]"
              >Tailwind</span
