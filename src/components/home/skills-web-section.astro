          <div class="tech-item">
            <div class="tech-icon">
              <Icon name="simple-icons:mongodb" class="text-[#47A248]" />
            </div>
            <span class="tech-label">MongoDB</span>
          </div>
        </div>
      </div>
    </div>

    <!-- CMS Card -->
    <div class="skill-card">
      <div class="card-content">
        <div class="card-icon">
          <Icon name="simple-icons:wordpress" class="icon-primary" />
        </div>
        <h3>CMS</h3>
        <p>Building and managing content-driven websites and applications</p>

        <div class="tech-icons">
          <div class="tech-item">
            <div class="tech-icon">
              <Icon name="simple-icons:wordpress" class="text-[#21759B]" />
            </div>
            <span class="tech-label">WordPress</span>
          </div>
          <div class="tech-item">
            <div class="tech-icon">
              <Icon name="simple-icons:strapi" class="text-[#0678BE]" />
            </div>
            <span class="tech-label">Strapi</span>
          </div>
          <div class="tech-item">
            <div class="tech-icon">
              <Icon name="simple-icons:contentful" class="text-[#2478CC]" />
            </div>
            <span class="tech-label">Contentful</span>
          </div>
        </div>
      </div>
    </div>

    <!-- AI Integration Card -->
    <div class="skill-card">
      <div class="card-content">
        <div class="card-icon">
          <Icon name="simple-icons:openai" class="icon-primary" />
        </div>
        <h3>AI Integration</h3>
        <p>Leveraging AI APIs and models within applications</p>

        <div class="tech-icons">
          <div class="tech-item">
            <div class="tech-icon">
              <Icon name="simple-icons:openai" class="text-[#10A37F]" />
            </div>
            <span class="tech-label">OpenAI</span>
          </div>
          <div class="tech-item">
            <div class="tech-icon">
              <Icon name="simple-icons:googlegemini" class="text-[#5F5CFF]" />
            </div>
            <span class="tech-label">Gemini</span>
          </div>
          <div class="tech-item">
            <div class="tech-icon">
              <Icon name="simple-icons:ollama" class="text-green-600" />
            </div>
            <span class="tech-label">Ollama</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Wireframing Card -->
    <div class="skill-card">
      <div class="card-content">
        <div class="card-icon">
          <Icon name="simple-icons:figma" class="icon-primary" />
        </div>
        <h3>Wireframing & Prototyping</h3>
        <p>Creating intuitive UI designs and interactive prototypes</p>

        <div class="tech-icons">
          <div class="tech-item">
            <div class="tech-icon">
              <Icon name="simple-icons:figma" class="text-[#F24E1E]" />
            </div>
            <span class="tech-label">Figma</span>
          </div>
          <div class="tech-item">
            <div class="tech-icon">
              <Icon name="simple-icons:adobexd" class="text-[#FF61F6]" />
            </div>
            <span class="tech-label">Adobe XD</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .tech-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 1.25rem;
    margin-top: 2rem;
  }

  .skill-card {
    position: relative;
    background-color: transparent;
    border-radius: 8px;
    transition: all 0.3s ease;
    height: 100%;
    overflow: visible;
  }

  .skill-card::before {
    content: "";
    position: absolute;
    inset: 0;
    border: 1px dashed rgba(148, 163, 184, 0.5);
    border-radius: 8px;
    transition: all 0.3s ease;
    z-index: 1;
  }

  .skill-card:hover {
    transform: translateY(-4px);
  }

  .skill-card:hover::before {
    border-color: rgba(96, 165, 250, 0.7);
  }

  /* Light mode styles */
  :global(.light) .skill-card::before {
    border-color: rgba(71, 85, 105, 0.8);
    border-width: 1.5px;
  }

  :global(.light) .skill-card:hover::before {
    border-color: rgba(59, 130, 246, 0.8);
  }

  .card-content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    height: 100%;
    position: relative;
    z-index: 5;
    background-color: transparent;
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .skill-card:hover .card-content {
    background-color: rgba(30, 41, 59, 0.02);
  }

  :global(.light) .skill-card:hover .card-content {
    background-color: rgba(255, 255, 255, 0.6);
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.08);
  }

  .card-icon {
    width: 40px;
    height: 40px;
    margin-bottom: 1rem;
    position: relative;
    transition: transform 0.3s ease;
  }

  .skill-card:hover .card-icon {
    transform: scale(1.1);
  }

  .icon-primary {
    width: 100%;
    height: 100%;
    color: #60a5fa;
    transition: all 0.3s ease;
  }

  :global(.light) .icon-primary {
    color: #3b82f6;
  }

  .skill-card:hover .icon-primary {
    color: #60a5fa;
    filter: drop-shadow(0 0 8px rgba(96, 165, 250, 0.8));
  }

  :global(.light) .skill-card:hover .icon-primary {
    color: #2563eb;
    filter: drop-shadow(0 0 8px rgba(59, 130, 246, 0.5));
  }

  .skill-card h3 {
    color: #f8fafc;
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  :global(.light) .skill-card h3 {
    color: #1e293b;
  }

  .skill-card p {
    color: #94a3b8;
    font-size: 0.875rem;
    line-height: 1.5;
    margin-bottom: 1.25rem;
  }

  :global(.light) .skill-card p {
    color: #64748b;
  }

  .tech-icons {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin-top: auto;
  }

  .tech-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 0.5rem;
    min-width: 3.5rem;
  }

  .tech-icon {
    width: 28px;
    height: 28px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 0.25rem;
    transition: transform 0.2s ease;
  }

  .tech-icon svg {
    width: 100%;
    height: 100%;
  }

  .tech-icon:hover {
    transform: translateY(-2px);
  }

  .tech-label {
    font-size: 0.625rem;
    color: #94a3b8;
    text-align: center;
    line-height: 1.2;
    max-width: 3.5rem;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  :global(.light) .tech-label {
    color: #64748b;
  }

  /* Fix for dark icons in light mode */
  :global(.light) .tech-icon svg.text-current {
    color: #334155;
  }

  @media (max-width: 640px) {
    .tech-grid {
      grid-template-columns: 1fr;
    }

    .card-content {
      padding: 1.25rem;
    }
  }
</style>
