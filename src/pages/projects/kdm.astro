---
import MainLayout from "../../layouts/main.astro";
import ImageComparer from "../../components/ui/ImageComparer";
import PageHeading from "../../components/ui/page-heading.astro";
import { Icon } from "astro-icon/components";
---

<MainLayout title="KDM Engineers - Construction & Infrastructure">
  <div class="max-w-4xl mx-auto my-12 sm:my-16 px-4 sm:px-6 lg:px-8">
    <!-- Project Header -->
    <div class="text-center mb-14">
      <PageHeading title='KDM <span class="text-blue-500">Engineers</span>' />

      <p
        class="text-base md:text-xl leading-relaxed text-gray-700 dark:text-gray-300 mb-8 max-w-2xl mx-auto"
      >
        Complete website redesign for a construction company, transforming their
        digital presence and boosting user engagement by 70%.
      </p>

      <!-- Project Tags -->
      <div class="flex flex-wrap justify-center gap-3 mb-8">
        <span
          class="inline-flex items-center px-4 py-1.5 rounded-full bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300 text-sm font-medium"
        >
          <Icon name="mdi:briefcase-outline" class="w-4 h-4 mr-1.5" />
          <span>Internship Project</span>
        </span>
        <span
          class="inline-flex items-center px-4 py-1.5 rounded-full bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300 text-sm font-medium"
        >
          <Icon name="mdi:web" class="w-4 h-4 mr-1.5" />
          <span>Web Design</span>
        </span>
      </div>
    </div>

    <!-- Project Metrics -->
    <div class="grid grid-cols-3 gap-5 mb-12">
      <div
        class="bg-white dark:bg-gray-800 rounded-xl p-6 text-center shadow-md transition-all duration-300 hover:shadow-lg hover:scale-102 border border-gray-200 dark:border-gray-700"
      >
        <div class="text-blue-500 mb-3">
          <Icon name="mdi:cellphone-link" class="w-10 h-10 mx-auto" />
        </div>
        <div class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-2">
          70%+
        </div>
        <p class="text-sm text-gray-600 dark:text-gray-400">
          Increase in mobile visitors
        </p>
      </div>

      <div
        class="bg-white dark:bg-gray-800 rounded-xl p-6 text-center shadow-md transition-all duration-300 hover:shadow-lg hover:scale-102 border border-gray-200 dark:border-gray-700"
      >
        <div class="text-blue-500 mb-3">
          <Icon name="mdi:briefcase-check" class="w-10 h-10 mx-auto" />
        </div>
        <div class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-2">
          45%
        </div>
        <p class="text-sm text-gray-600 dark:text-gray-400">
          More job applications
        </p>
      </div>

      <div
        class="bg-white dark:bg-gray-800 rounded-xl p-6 text-center shadow-md transition-all duration-300 hover:shadow-lg hover:scale-102 border border-gray-200 dark:border-gray-700"
      >
        <div class="text-blue-500 mb-3">
          <Icon name="mdi:clock-fast" class="w-10 h-10 mx-auto" />
        </div>
        <div class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-2">
          3x
        </div>
        <p class="text-sm text-gray-600 dark:text-gray-400">
          Faster page load speed
        </p>
      </div>
    </div>

    <!-- Featured Image / Before & After Comparison -->
    <div class="mb-16">
      <h2
        class="text-2xl font-bold mb-8 text-center text-gray-900 dark:text-gray-100"
      >
        The Transformation
      </h2>

      <div
        class="rounded-lg overflow-hidden shadow-lg border border-gray-200 dark:border-gray-700 hover:shadow-lg transition-all duration-300"
      >
        <div class="relative">
          <ImageComparer
            beforeImage="/assets/images/projects/kdm-before.jpeg"
            afterImage="/assets/images/projects/kdm-after.png"
            beforeAlt="Original KDM website design"
            afterAlt="Redesigned modern KDM website"
            beforeLabel="Before"
            afterLabel="After"
            maxWidth="100%"
            containerHeight="500px"
            beforeFocus="top center"
            afterFocus="top center"
            client:load
          />
        </div>

        <div
          class="bg-gray-50 dark:bg-gray-800 py-2 flex justify-center items-center"
        >
          <div
            class="inline-flex items-center text-xs text-gray-500 dark:text-gray-400 px-3 py-1 rounded-full bg-white dark:bg-gray-700 shadow-sm"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-3 w-3 mr-1"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Drag slider
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-3 w-3 ml-1"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- Problem & Solution -->
    <div class="grid md:grid-cols-2 gap-8 mb-16">
      <div
        class="bg-gray-50 dark:bg-gray-800/50 rounded-xl p-6 shadow-md transition-all duration-300 hover:shadow-lg"
      >
        <h2
          class="text-xl font-bold mb-5 flex items-center text-gray-900 dark:text-gray-100"
        >
          <Icon name="mdi:alert-circle" class="w-6 h-6 text-red-500 mr-2" />
          The Challenge
        </h2>

        <ul class="space-y-3 text-gray-700 dark:text-gray-300">
          <li class="flex items-start">
            <Icon
              name="mdi:close"
              class="w-5 h-5 text-red-500 mt-0.5 mr-2 flex-shrink-0"
            />
            <span>Legacy website not mobile-responsive</span>
          </li>
          <li class="flex items-start">
            <Icon
              name="mdi:close"
              class="w-5 h-5 text-red-500 mt-0.5 mr-2 flex-shrink-0"
            />
            <span>Outdated design failing to inspire confidence</span>
          </li>
          <li class="flex items-start">
            <Icon
              name="mdi:close"
              class="w-5 h-5 text-red-500 mt-0.5 mr-2 flex-shrink-0"
            />
            <span>Poor navigation and content organization</span>
          </li>
          <li class="flex items-start">
            <Icon
              name="mdi:close"
              class="w-5 h-5 text-red-500 mt-0.5 mr-2 flex-shrink-0"
            />
            <span>Missing crucial features like job portal</span>
          </li>
        </ul>
      </div>

      <div
        class="bg-blue-50 dark:bg-blue-900/20 rounded-xl p-6 shadow-md transition-all duration-300 hover:shadow-lg"
      >
        <h2
          class="text-xl font-bold mb-5 flex items-center text-gray-900 dark:text-gray-100"
        >
          <Icon name="mdi:lightbulb-on" class="w-6 h-6 text-blue-500 mr-2" />
          My Solution
        </h2>

        <ul class="space-y-3 text-gray-700 dark:text-gray-300">
          <li class="flex items-start">
            <Icon
              name="mdi:check"
              class="w-5 h-5 text-green-500 mt-0.5 mr-2 flex-shrink-0"
            />
            <span>Created fully responsive design with modern aesthetics</span>
          </li>
          <li class="flex items-start">
            <Icon
              name="mdi:check"
              class="w-5 h-5 text-green-500 mt-0.5 mr-2 flex-shrink-0"
            />
            <span>Implemented intuitive navigation and content hierarchy</span>
          </li>
          <li class="flex items-start">
            <Icon
              name="mdi:check"
              class="w-5 h-5 text-green-500 mt-0.5 mr-2 flex-shrink-0"
            />
            <span>Developed integrated job portal for recruitment</span>
          </li>
          <li class="flex items-start">
            <Icon
              name="mdi:check"
              class="w-5 h-5 text-green-500 mt-0.5 mr-2 flex-shrink-0"
            />
            <span>Optimized performance and SEO for better visibility</span>
          </li>
        </ul>
      </div>
    </div>

    <!-- My Approach -->
    <div class="mb-16">
      <h2
        class="text-2xl font-bold mb-8 text-center text-gray-900 dark:text-gray-100"
      >
        My Approach
      </h2>

      <div class="relative">
        <!-- Timeline line -->
        <div
          class="absolute left-16 top-0 h-full w-0.5 bg-blue-200 dark:bg-blue-800"
        >
        </div>

        <!-- Timeline steps -->
        <div class="space-y-8">
          <div class="relative flex items-start">
            <div
              class="absolute left-16 -translate-x-1/2 w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center text-white z-10"
            >
              1
            </div>
            <div
              class="ml-24 bg-white dark:bg-gray-800 rounded-xl p-5 shadow-sm border border-gray-200 dark:border-gray-700 w-full"
            >
              <h3
                class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-2"
              >
                Discovery & Stakeholder Collaboration
              </h3>
              <p class="text-gray-700 dark:text-gray-300">
                Conducted meetings with company leaders to understand their
                vision, business goals, and target audience.
              </p>
            </div>
          </div>

          <div class="relative flex items-start">
            <div
              class="absolute left-16 -translate-x-1/2 w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center text-white z-10"
            >
              2
            </div>
            <div
              class="ml-24 bg-white dark:bg-gray-800 rounded-xl p-5 shadow-sm border border-gray-200 dark:border-gray-700 w-full"
            >
              <h3
                class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-2"
              >
                Design & Prototyping
              </h3>
              <p class="text-gray-700 dark:text-gray-300">
                Created wireframes and design mockups in Figma, iterating based
                on stakeholder feedback before implementation.
              </p>
            </div>
          </div>

          <div class="relative flex items-start">
            <div
              class="absolute left-16 -translate-x-1/2 w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center text-white z-10"
            >
              3
            </div>
            <div
              class="ml-24 bg-white dark:bg-gray-800 rounded-xl p-5 shadow-sm border border-gray-200 dark:border-gray-700 w-full"
            >
              <h3
                class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-2"
              >
                Development & Implementation
              </h3>
              <p class="text-gray-700 dark:text-gray-300">
                Built the website using WordPress, custom PHP, and MySQL for the
                backend with optimized code for performance.
              </p>
            </div>
          </div>

          <div class="relative flex items-start">
            <div
              class="absolute left-16 -translate-x-1/2 w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center text-white z-10"
            >
              4
            </div>
            <div
              class="ml-24 bg-white dark:bg-gray-800 rounded-xl p-5 shadow-sm border border-gray-200 dark:border-gray-700 w-full"
            >
              <h3
                class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-2"
              >
                Testing & Optimization
              </h3>
              <p class="text-gray-700 dark:text-gray-300">
                Conducted cross-browser and cross-device testing, optimized for
                speed, and implemented analytics for tracking.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Key Features -->
    <div class="mb-16">
      <h2
        class="text-2xl font-bold mb-8 text-center text-gray-900 dark:text-gray-100"
      >
        Key Features Implemented
      </h2>

      <div class="grid grid-cols-2 sm:grid-cols-3 gap-5">
        {
          [
            {
              icon: "mdi:responsive",
              title: "Responsive Design",
              desc: "Optimized for all devices",
            },
            {
              icon: "mdi:briefcase-outline",
              title: "Job Portal",
              desc: "Streamlined recruitment",
            },
            {
              icon: "mdi:chat-processing-outline",
              title: "Interactive Chatbot",
              desc: "Improved customer service",
            },
            {
              icon: "mdi:magnify",
              title: "SEO Optimization",
              desc: "Enhanced search visibility",
            },
            {
              icon: "mdi:chart-line",
              title: "Analytics",
              desc: "Data-driven insights",
            },
            {
              icon: "mdi:lightning-bolt",
              title: "Performance",
              desc: "3x faster load times",
            },
          ].map((feature) => (
            <div class="flex flex-col items-center bg-white dark:bg-gray-800 rounded-lg p-6 shadow-sm hover:shadow-md hover:scale-105 transition-all duration-300 border border-gray-200 dark:border-gray-700">
              <div class="w-12 h-12 flex items-center justify-center mb-3 text-blue-500 dark:text-blue-400">
                <Icon name={feature.icon} class="w-8 h-8" />
              </div>
              <p class="text-base font-bold text-center text-gray-800 dark:text-gray-200 mb-1">
                {feature.title}
              </p>
              <p class="text-sm text-center text-gray-600 dark:text-gray-400">
                {feature.desc}
              </p>
            </div>
          ))
        }
      </div>
    </div>

    <!-- Technology Stack -->
    <div class="mb-16 bg-gray-50 dark:bg-gray-800/50 rounded-xl p-6 shadow-md">
      <h2
        class="text-2xl font-bold mb-8 text-center text-gray-900 dark:text-gray-100"
      >
        Technology Stack
      </h2>

      <div class="grid grid-cols-2 sm:grid-cols-4 gap-6">
        <div class="flex flex-col items-center">
          <div
            class="w-16 h-16 flex items-center justify-center mb-3 bg-white dark:bg-gray-700 rounded-full shadow-sm"
          >
            <Icon
              name="simple-icons:wordpress"
              class="w-8 h-8 text-[#21759b]"
            />
          </div>
          <p
            class="text-sm font-medium text-center text-gray-800 dark:text-gray-200"
          >
            WordPress
          </p>
        </div>

        <div class="flex flex-col items-center">
          <div
            class="w-16 h-16 flex items-center justify-center mb-3 bg-white dark:bg-gray-700 rounded-full shadow-sm"
          >
            <Icon name="simple-icons:figma" class="w-8 h-8 text-[#F24E1E]" />
          </div>
          <p
            class="text-sm font-medium text-center text-gray-800 dark:text-gray-200"
          >
            Figma
          </p>
        </div>

        <div class="flex flex-col items-center">
          <div
            class="w-16 h-16 flex items-center justify-center mb-3 bg-white dark:bg-gray-700 rounded-full shadow-sm"
          >
            <Icon name="simple-icons:php" class="w-8 h-8 text-[#777BB4]" />
          </div>
          <p
            class="text-sm font-medium text-center text-gray-800 dark:text-gray-200"
          >
            PHP
          </p>
        </div>

        <div class="flex flex-col items-center">
          <div
            class="w-16 h-16 flex items-center justify-center mb-3 bg-white dark:bg-gray-700 rounded-full shadow-sm"
          >
            <Icon name="simple-icons:mysql" class="w-8 h-8 text-[#4479A1]" />
          </div>
          <p
            class="text-sm font-medium text-center text-gray-800 dark:text-gray-200"
          >
            MySQL
          </p>
        </div>
      </div>
    </div>

    <!-- Key Learnings / Takeaways -->
    <div class="mb-16 bg-blue-50 dark:bg-blue-900/20 rounded-xl p-6">
      <h2 class="text-2xl font-bold mb-6 text-gray-900 dark:text-gray-100">
        Key Learnings & Takeaways
      </h2>

      <div class="space-y-4">
        <div class="flex items-start">
          <Icon
            name="mdi:lightbulb-on"
            class="w-6 h-6 text-yellow-500 mt-0.5 mr-3 flex-shrink-0"
          />
          <p class="text-gray-700 dark:text-gray-300">
            <span class="font-medium text-gray-900 dark:text-gray-100"
              >Stakeholder Collaboration:</span
            > Regular communication ensures alignment of expectations and prevents
            scope creep
          </p>
        </div>

        <div class="flex items-start">
          <Icon
            name="mdi:lightbulb-on"
            class="w-6 h-6 text-yellow-500 mt-0.5 mr-3 flex-shrink-0"
          />
          <p class="text-gray-700 dark:text-gray-300">
            <span class="font-medium text-gray-900 dark:text-gray-100"
              >Prototyping Value:</span
            > Creating design demos before implementation saved significant development
            time
          </p>
        </div>

        <div class="flex items-start">
          <Icon
            name="mdi:lightbulb-on"
            class="w-6 h-6 text-yellow-500 mt-0.5 mr-3 flex-shrink-0"
          />
          <p class="text-gray-700 dark:text-gray-300">
            <span class="font-medium text-gray-900 dark:text-gray-100"
              >User-Centric Design:</span
            > Organizing content based on user needs significantly improves navigation
            and experience
          </p>
        </div>

        <div class="flex items-start">
          <Icon
            name="mdi:lightbulb-on"
            class="w-6 h-6 text-yellow-500 mt-0.5 mr-3 flex-shrink-0"
          />
          <p class="text-gray-700 dark:text-gray-300">
            <span class="font-medium text-gray-900 dark:text-gray-100"
              >Performance Focus:</span
            > Considering performance from the start prevents costly rework later
          </p>
        </div>
      </div>
    </div>

    <!-- Impact / Business Impact -->
    <div class="mb-16">
      <h2
        class="text-2xl font-bold mb-8 text-center text-gray-900 dark:text-gray-100"
      >
        Business Impact
      </h2>

      <div class="grid grid-cols-1 sm:grid-cols-3 gap-6">
        <div
          class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-md hover:shadow-lg transition-all duration-300 border border-gray-200 dark:border-gray-700"
        >
          <div class="text-blue-500 dark:text-blue-400 mb-4 text-center">
            <Icon name="mdi:eye-outline" class="w-10 h-10 mx-auto" />
          </div>
          <h3
            class="text-lg font-bold text-gray-900 dark:text-gray-100 mb-2 text-center"
          >
            Improved Visibility
          </h3>
          <p class="text-sm text-gray-600 dark:text-gray-400 text-center">
            Increased credibility and recognition in the construction sector
          </p>
        </div>

        <div
          class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-md hover:shadow-lg transition-all duration-300 border border-gray-200 dark:border-gray-700"
        >
          <div class="text-blue-500 dark:text-blue-400 mb-4 text-center">
            <Icon name="mdi:account-group" class="w-10 h-10 mx-auto" />
          </div>
          <h3
            class="text-lg font-bold text-gray-900 dark:text-gray-100 mb-2 text-center"
          >
            Efficient Recruitment
          </h3>
          <p class="text-sm text-gray-600 dark:text-gray-400 text-center">
            Streamlined hiring process saving HR time and resources
          </p>
        </div>

        <div
          class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-md hover:shadow-lg transition-all duration-300 border border-gray-200 dark:border-gray-700"
        >
          <div class="text-blue-500 dark:text-blue-400 mb-4 text-center">
            <Icon name="mdi:chart-box" class="w-10 h-10 mx-auto" />
          </div>
          <h3
            class="text-lg font-bold text-gray-900 dark:text-gray-100 mb-2 text-center"
          >
            Data-Driven Insights
          </h3>
          <p class="text-sm text-gray-600 dark:text-gray-400 text-center">
            Analytics integration providing actionable business intelligence
          </p>
        </div>
      </div>
    </div>
  </div>
</MainLayout>

<style>
  .text-gradient {
    background: linear-gradient(90deg, #3b82f6 0%, #60a5fa 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  @media (prefers-color-scheme: dark) {
    .text-gradient {
      background: linear-gradient(90deg, #60a5fa 0%, #93c5fd 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }
  }
</style>
